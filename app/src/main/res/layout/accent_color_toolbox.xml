<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_alignParentBottom="true">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ok_circle"
        android:background="@android:color/transparent"
        android:id="@+id/okButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/exit_circle"
        android:background="@android:color/transparent"
        android:id="@+id/exitButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/chooseColorButton"
        android:layout_toRightOf="@id/okButton"
        android:layout_toEndOf="@id/okButton"
        android:layout_toLeftOf="@id/exitButton"
        android:layout_toStartOf="@id/exitButton"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:text="@string/choose_color"/>

    <android.support.v7.widget.AppCompatSeekBar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/leftSeekBar"
        android:layout_toRightOf="@id/okButton"
        android:layout_toEndOf="@id/okButton"
        android:layout_toLeftOf="@id/exitButton"
        android:layout_toStartOf="@id/exitButton"
        android:layout_below="@+id/chooseColorButton"
        android:progress="0"
        android:max="359"
        android:progressDrawable="@android:color/darker_gray"/>



</RelativeLayout>

